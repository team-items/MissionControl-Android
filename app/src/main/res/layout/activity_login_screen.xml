<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="robo4you.at.missioncontrolandroid.LoginScreen"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="328dp"
                android:layout_height="213dp"
                android:id="@+id/imageView"
                android:layout_gravity="center_horizontal|top"
                android:src="@mipmap/missioncontrol_white_1024" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/connectionIP"
                    android:hint="IP/Hostname"
                    android:text="items.ninja"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:minWidth="140dp" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/connectionPort"
                    android:hint="Port"
                    android:text="62626"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:minWidth="80dp" />
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect"
                android:id="@+id/connectbtn"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="35dp"
                android:background="@color/itemsRed"
                android:textColor="#ffffff"
                />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.dlazaro66.qrcodereaderview.QRCodeReaderView
                android:id="@+id/qrdecoderview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
