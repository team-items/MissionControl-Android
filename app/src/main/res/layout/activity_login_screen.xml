<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="robo4you.at.missioncontrolandroid.LoginScreen"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="219dp"
                android:layout_height="142dp"
                android:id="@+id/imageView"
                android:layout_gravity="center_horizontal|top"
                android:src="@mipmap/missioncontrol_white_1024" />

            <EditText
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:id="@+id/connectionIP"
                android:layout_gravity="left|center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textAlignment="center"
                android:layout_marginTop="30dp"

                android:hint="IP/Hostname"
                android:text="10.0.0.64" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect"
                android:id="@+id/connectbtn"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="25dp"
                android:background="@color/itemsRed"
                android:textColor="#ffffff"
                />

            <EditText
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:id="@+id/connectionPort"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:hint="Port"
                android:text="62626" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <!--<com.dlazaro66.qrcodereaderview.QRCodeReaderView
                android:id="@+id/qrdecoderview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />-->

        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
